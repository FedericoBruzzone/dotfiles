	name = FedericoBruzzone
[alias]
	clone-branches = "! git branch -a | sed -n \"/\\/HEAD /d; /\\/main$/d; /remotes/p;\" | xargs -L1 git checkout -t"
	graph = "! git log --all --decorate --oneline --graph"
    s = status
    a = add
    l = log --oneline --graph --all
    c = commit
    ca = commit --amend
    p = push
    f = fetch
    co = checkout
    br = branch

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
[difftool]
    prompt = true
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[diff]
    ; tool = vimdiff
    tool = nvimdiff
[merge]
    ; tool = vimdiff
    tool = nvimdiff
[init]
	defaultBranch = main

